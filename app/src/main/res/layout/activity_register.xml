<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.floxx.floxx.RegisterActivity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/hologradient"
        android:scaleY="-1" />

    <View
        android:layout_marginTop="50dp"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:id="@+id/register_divider1"
        android:background="#fff"
        android:layout_marginBottom="15dp"
        android:layout_marginStart="@dimen/ra_side_margin"
        android:layout_marginEnd="@dimen/ra_side_margin" />

    <TextView
        android:id="@+id/register_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_divider1"
        android:layout_centerHorizontal="true"
        android:text="@string/register_header"
        android:textSize="40sp"
        android:textStyle="bold"
        android:textColor="#fff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:id="@+id/register_subtext"
        android:text="@string/register_subtext"
        android:layout_below="@id/register_welcome"
        android:textSize="25sp"
        android:textColor="#cecece" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_below="@id/register_subtext"
        android:id="@+id/register_divider2"
        android:background="#fff"
        android:layout_marginBottom="40dp"
        android:layout_marginStart="@dimen/ra_side_margin"
        android:layout_marginEnd="@dimen/ra_side_margin" />

    <TextView
        android:id="@+id/register_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="@string/register_desc"
        android:layout_below="@id/register_divider2"
        android:textSize="15sp"
        android:layout_marginStart="@dimen/ra_side_margin"
        android:layout_marginEnd="@dimen/ra_side_margin"
        android:textColor="#cecece"
        android:paddingStart="5dp"
        android:paddingEnd="5dp" />

    <EditText
        android:id="@+id/register_user"
        android:layout_below="@id/register_desc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="@string/register_username_prompt"
        android:background="@drawable/textbox"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="@dimen/ra_side_margin"
        android:layout_marginEnd="@dimen/ra_side_margin"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:inputType="text"
        android:maxLines="1" />

    <EditText
        android:id="@+id/register_email"
        android:layout_below="@id/register_user"
        android:layout_alignStart="@id/register_user"
        android:layout_alignEnd="@id/register_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:hint="@string/register_email_prompt"
        android:background="@drawable/textbox"
        android:layout_marginBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:inputType="textEmailAddress"
        android:maxLines="1" />

    <EditText
        android:id="@+id/register_password"
        android:layout_below="@+id/register_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/register_user"
        android:layout_alignEnd="@id/register_user"
        android:layout_centerHorizontal="true"
        android:hint="@string/register_password_prompt"
        android:background="@drawable/textbox"
        android:layout_marginBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:inputType="textPassword"
        android:maxLines="1" />

    <EditText
        android:id="@+id/confirm_password"
        android:layout_below="@+id/register_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/register_user"
        android:layout_alignEnd="@id/register_user"
        android:layout_centerHorizontal="true"
        android:hint="@string/confirm_pw_prompt"
        android:background="@drawable/textbox"
        android:layout_marginBottom="15dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:inputType="textPassword"
        android:maxLines="1" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_below="@+id/confirm_password"
        android:layout_centerHorizontal="true"
        android:text="@string/register_button"
        android:backgroundTint="#fff"
        android:textColor="#000"
        android:paddingStart="15dp"
        android:paddingEnd="15dp" />

</RelativeLayout>
