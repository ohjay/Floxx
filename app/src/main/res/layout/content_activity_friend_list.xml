<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FriendListActivity"
    tools:showIn="@layout/activity_activity_friend_list">
    <ImageButton
        android:id="@+id/setting_logo"
        android:src="@drawable/setting_icon"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_marginTop="505dp"
        android:layout_marginLeft="0dp"
        android:layout_gravity="bottom|left"
        android:background="@null"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/group_creation_header"
        android:id="@+id/textView"
        android:textSize="35sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:layout_below="@+id/textView"
        android:layout_marginTop="20dp"
        android:id="@+id/scrollView">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/button_container">
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to map"
        android:id="@+id/mapgo"
        android:layout_below="@+id/scrollView"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#f89b4a" />
    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:id="@+id/button"
        android:onClick=""
        android:layout_below="@id/mapgo"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
