<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context="co.floxx.floxx.FullscreenActivity">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/floxx_logo"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:keepScreenOn="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="35dp"
        android:text="@string/main_content"
        android:textColor="#33b5e5"
        android:textSize="70sp"
        android:textStyle="bold" />
</LinearLayout>

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->

    <!-- This FrameLayout insets its children based on system windows using
         android:fitsSystemWindows. -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">


        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:clickable="true"
                android:layout_weight="1">

                <ImageButton android:id="@+id/setting_logo"
                    android:src="@drawable/setting_icon"
                    android:layout_width="62dp"
                    android:layout_height="62dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="360dp"
                    android:scaleType="fitXY"
                    android:layout_gravity="right|top"
                    android:background="@null"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Don't have an account? Register now!"
                    android:id="@+id/register_button"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="175dp"
                    android:clickable="true"
                    android:onClick="registerAccount"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Now      and      Forever"
                    android:id="@+id/textView3"
                    android:layout_marginBottom="170dp"
                    android:layout_marginLeft="105dp"
                    android:layout_gravity="left|center_vertical"
                    android:textSize="25dp" />


            </FrameLayout>

        </LinearLayout>
        <EditText android:id="@+id/enter_username"
            android:layout_marginTop="220dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:hint="Enter your username" />
        <EditText android:id="@+id/enter_password"
            android:layout_marginTop="270dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:hint="Enter your password" />


        <Button
            android:id="@+id/log_in_button"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="220dp"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="250dp"
            android:text="Sign in"
            android:backgroundTint="#067036" />


    </FrameLayout>

</FrameLayout>
